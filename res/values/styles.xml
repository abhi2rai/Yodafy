<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="HomeScreen" parent="android:Theme.Holo">
		 <item name="android:actionBarStyle">@style/MyActionBar</item>
		 <item name="android:editTextStyle">@style/App_EditTextStyle</item>
		 <item name="android:windowContentOverlay">@null</item>
		 <item name="android:editTextBackground">@drawable/homescreen_edit_text_holo_dark</item>
	    <item name="android:textColorHighlight">#99ffffff</item>
	    <item name="android:textSelectHandleLeft">@drawable/homescreen_text_select_handle_left</item>
	    <item name="android:textSelectHandleRight">@drawable/homescreen_text_select_handle_right</item>
	    <item name="android:textSelectHandle">@drawable/homescreen_text_select_handle_middle</item>
    </style>
    
    <style name="MyActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#7AA42F</item>
        <item name="android:titleTextStyle">@style/TitleColor</item>
    </style>
    
    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
	    <item name="android:textColor">#ffffff</item>
	    <item name="android:textColorHint">#ffffff</item>
	</style>

    <style name="TitleColor" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
